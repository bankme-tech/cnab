{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": true,
    "inlineSources": true,
    "lib": ["ES2019", "ES2021"],
    "paths": {
      "@/*": ["./src/*"],
      "@decorators/*": ["./src/decorators/*"],
      "@/cnab/*": ["./src/cnab/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "*.ts", "src/**/*.spec.ts"]
}
